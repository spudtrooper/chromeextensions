{
  "manifest_version": 2,
  
  "name": "Craigslist Inline Image",
  "short_name": "Craigslist Inline Image",
  "description": "Displays craigslist images inline",
  "version": "1.0",
  
  "content_scripts": [
    {
      "matches": ["http://craigslist.org/*",
		  "http://*.craigslist.org/*"],
      "js": ["craigslistinlineimage.js"]
    }
  ],
  "permissions": [
    "storage"
  ],
  "options_page": "options.html",
  "icons": { 
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png" 
  }
}
